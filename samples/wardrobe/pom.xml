<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.gwt.flux</groupId>
        <artifactId>flux-samples-parent</artifactId>
        <version>0.0.2</version>
    </parent>

    <artifactId>flux-wardrobe-sample</artifactId>
    <name>Flux :: Samples :: Wardrobe</name>
    <description>
        Console based Flux sample simulating dress and undress of dependent items of clothing.
        Uses the DAG dispatcher and the meta annotations.
    </description>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.jboss.gwt.flux</groupId>
            <artifactId>flux-meta</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gwt.flux</groupId>
            <artifactId>flux-dag</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gwt.flux</groupId>
            <artifactId>flux-processor</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- The next plugins work together to enable APT support -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>process-annotation</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <proc>only</proc>
                            <compilerArguments>
                                <!--
                                    Options for the annotation processors
                                -->
                                <Acdi>false</Acdi>
                            </compilerArguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Don't change this ID (it overrides the default ID) -->
                        <id>default-compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <proc>none</proc>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>